  <div class="container">
    <% if user_signed_in? %>
      <%= link_to "PFC Meter", current_user, id: "logo" %>
    <% else %>
      <%= link_to "PFC Meter", root_url, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "ホーム", current_user %></li>
