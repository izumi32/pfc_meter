<% if @food.nil? %>
  <h1>昨日の登録</h1>
<% else %>
  <h1><%= @food.date %>の登録</h1>
<% end %>

<%= form_with(model: @food, url: display_user_path(@user), method: :post) do |f| %>

  <%= f.label :date, "日付" %>
  <%= f.datetime_field :date, class: "form-controll" %>

  <%= f.submit "表示", class: "btn btn-primary" %>
<% end %>
