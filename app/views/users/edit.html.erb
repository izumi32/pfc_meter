<%= @user.name %>

<h1>ユーザー情報</h1>

<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-controll' %>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-controll' %>

  <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>
