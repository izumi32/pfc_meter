<% unless current_user.calorie.nil? %>

  <h2>目標カロリー</h2>

  <% calorie_of_day = current_user.calorie.protein * 4 + current_user.calorie.fat * 9 + current_user.calorie.carbohydrate * 4 %>
  <% calorie_sum = @foods.sum(:protein) * 4 + @foods.sum(:fat) * 9 + @foods.sum(:carbohydrate) * 4 %>
  <table>
    <tr>
      <th></th>
      <th>カロリー</th>
      <th>タンパク質</th>
      <th>脂質</th>
      <th>炭水化物</th>
    </tr>
    <tr>
      <th>目標</th>
      <th><%= calorie_of_day %>kcal</th>
      <th><%= current_user.calorie.protein %>g</th>
      <th><%= current_user.calorie.fat %>g</th>
      <th><%= current_user.calorie.carbohydrate %>g</th>
    </tr>
    <tr>
      <th>あと</th>
      <th><%= calorie_of_day - calorie_sum %>kcal</th>
      <th><%= current_user.calorie.protein - @foods.sum(:protein) %>g</th>
      <th><%= current_user.calorie.fat - @foods.sum(:fat) %>g</th>
      <th><%= current_user.calorie.carbohydrate - @foods.sum(:carbohydrate) %>g</th>
    </tr>
  </table>

<% end %>

<h2>今日食べたもの</h2>

<table>
  <tr>
    <th>食材名</th>
    <th>カロリー</th>
    <th>タンパク質</th>
    <th>脂質</th>
    <th>炭水化物</th>
    <th>量</th>
    <th>備考</th>
  </tr>

  <% @foods.each do |food| %>
  <% calorie = food.protein * 4 + food.fat * 9 + food.carbohydrate * 4 %>
  <tr>
    <th><%= food.food_name %></th>
    <th><%= calorie %>kcal</th>
    <th><%= food.protein%>g</th>
    <th><%= food.fat %>g</th>
    <th><%= food.carbohydrate %>g</th>
    <th><%= food.amount %>%</th>
    <th><%= food.remarks %></th>
    <th><%= link_to "編集", edit_food_path(food) %></th>
    <th><%= link_to "削除", food, method: :delete %></th>
  </tr>
  <% end %>

  <tr>
    <th>合計</th>
    <th><%= calorie_sum %>kcal</th>
    <th><%= @foods.sum(:protein) %>g</th>
    <th><%= @foods.sum(:fat) %>g</th>
    <th><%= @foods.sum(:carbohydrate) %>g</th>
  </tr>

</table>

<%= link_to "食材登録", new_food_path %>
<%= link_to "カロリー設定", new_calory_path %>
<%= link_to "過去の登録", history_user_path(@user) %>
