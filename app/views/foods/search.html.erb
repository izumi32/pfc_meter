<table>
  <tr>
    <td>食品名</td>
    <td>カロリー</td>
    <td>タンパク質</td>
    <td>脂質</td>
    <td>炭水化物</td>
  </tr>
  <% @results["items"].each do |result| %>
    <tr>
      <td><%= result["food_name"] %></td>
      <td><%= result["calorie"] %></td>
      <td><%= result["protein"] %></td>
      <td><%= result["fat"] %></td>
      <td><%= result["carbohydrate"] %></td>
      <td>
        <%= button_to "登録", { controller: 'foods', action: 'create' },
        { params: { food: {
              food_name: result["food_name"],
              calorie: result["calorie"],
              protein: result["protein"],
              fat: result["fat"],
              carbohydrate: result["carbohydrate"],
              date: Time.now,
              amount: 100 } } } %>
      </td>
    </tr>
  <% end %>
</table>
